package week3.day1;

public class StringPalindrome {

	public static void main(String[] args) {

		String pal = "Malayalam";
		String revPal = "";

		for (int i = pal.length() - 1; i >= 0; i--) {
			revPal = revPal + pal.charAt(i);

			System.out.println(revPal);// prints each char of string in reverse
		}

		System.out.println(revPal);

		if (pal.equalsIgnoreCase(revPal))
			System.out.println("Given String " + pal + " is a Palindrome.");

		else

			System.out.println("Given String " + pal + " is Not a Palindrome");
	}

}
